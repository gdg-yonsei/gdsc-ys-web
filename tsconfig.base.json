{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "module": "es2020",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "**/node_modules/", "**/dist", "*.config.js"]
}
